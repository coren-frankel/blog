{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 5,
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "string",
      "default": "url-pattern",
      "required": true,
      "unique": true,
      "regex": "[a-z0-9]+"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author",
      "inversedBy": "article"
    },
    "contentTags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    }
  }
}
